<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/home_fragment">

    <fragment
        android:id="@+id/home_fragment"
        android:name="io.github.bimlibik.pyfia.ui.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_home_to_tutorials"
            app:destination="@id/tutorials_fragment" />
        <action
            android:id="@+id/action_home_to_training"
            app:destination="@id/training_fragment" />
    </fragment>
    <fragment
        android:id="@+id/tutorials_fragment"
        android:name="io.github.bimlibik.pyfia.ui.tutorials.TutorialsFragment"
        android:label="@string/label_tutorial"
        tools:layout="@layout/fragment_tutorials"/>
    <fragment
        android:id="@+id/training_fragment"
        android:name="io.github.bimlibik.pyfia.ui.training.TrainingFragment"
        android:label="TrainingFragment"
        tools:layout="@layout/fragment_training"/>
</navigation>